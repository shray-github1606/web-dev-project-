doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Holoinfo
style.
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap');
    body {
    background-color: #191d28;
    margin: 0;
    }
    #main_title {
    font-family: 'Noto Sans', sans-serif;
    position: absolute;
    top: 2vw;
    left: 3vw;
    }
    #title {
    font-size: 40px;
    color: #3dc6c1;
    text-transform: uppercase;
    }
    #title~span {
    color: white;
    font-size: 20px;
    }
    #tagline {
    font-size: 20px;
    color: #5d5e62;
    font-family: 'Oswald', sans-serif;
    position: absolute;
    left: 3vw;
    top: 6vw;
    }
    #tagline span:nth-child(2) {
    color: #3dc6c1;
    }
    select {
    border-radius: 11px;
    height: 1cm;
    width: 1.7cm;
    -webkit-appearance: none;
    -moz-appearance: none;
    font-family: 'Roboto Condensed', sans-serif;
    color: black;
    filter: invert(1);
    font-size: 17px;
    margin-right: 22px;
    font-weight: 800;
    background: #d1cdbe;
    background-image: url("data:image/svg+xml;utf8,<svg fill='black' height='24' viewBox='0 0 24 24' width='24' xmlns='http://www.w3.org/2000/svg'><path d='M7 10l5 5 5-5z'/><path d='M0 0h24v24H0z' fill='none'/></svg>");
    background-repeat: no-repeat;
    background-position-x: 97%;
    background-position-y: 6px;
    border: 1px solid #dfdfdf;
    margin-left: 0rem;
    text-align: center;
    padding-left: 16px;
    }
    #buttons {
    position: absolute;
    top: 1.5cm;
    right: 50%;
    left: 42%;
    width: 5cm;
    }
    #telegram_logo {
    height: 20px;
    width: 20px;
    padding: 11px;
    padding-right: 0;
    padding-left: 23px;
    }
    #telegram_logo~div {
    color: white;
    font-family: 'Roboto Condensed', sans-serif;
    margin-top: -38px;
    margin-left: 47px;
    font-size: 17px;
    width: 4cm;
    }
    #telegram {
    width: 4.8cm;
    height: 1cm;
    background-color: #3dc6c1;
    border-radius: 10px;
    position: absolute;
    top: 1.5cm;
    right: 4cm;
    cursor: pointer;
    }
    input {
    height: 1cm;
    width: 1.6cm;
    position: absolute;
    top: 1.5cm;
    right: 1.6cm;
    -webkit-appearance: none;
    background-color: #2e3241;
    border-radius: 20px;
    transition: .2s;
    }
    input[type="checkbox"]::before {
    content: "";
    height: 25px;
    width: 25px;
    position: absolute;
    top: 6px;
    right: 6px;
    background-color: #3dc6c1;
    border-radius: 50%;
    cursor: pointer;
    transition: .5s;
    }
    input:checked {
    background-color: #f8f9fa;
    }
    input:checked>body {
    background-color: #f8f9fa;
    }
    input:checked[type="checkbox"]::before {
    right: 30px;
    }
    table {
    font-family: 'Oswald', sans-serif;
    font-weight:800;
    position: absolute;
    top: 11rem;
    /* border-collapse: collapse; */
    width: 97%;
    right: 24px;
    left: 24px;
    border-collapse: separate;
    border-spacing: 0 15px;
    }
    td,
    th {
    /* border: 2px solid red; */
    text-align: center;
    padding: 7px;
    padding-left: 16px;
    font-size: 29px;
    }
    tr {
    color: white;
    background-color: #2e3241;
    margin: 0 12px;
    }
    tr:nth-child(1) {
    color: #5e6169;
    background-color: transparent;
    }
    th:nth-child(1),
    td:nth-child(1) {
    text-align: left;
    border-spacing: 4px, 15px;
    border-radius: 10px 0 0 10px;
    }
    th:nth-child(6),
    td:nth-child(6) {
    border-radius: 0 10px 10px 0;
    }
    td:nth-child(2) {
    text-transform: uppercase;
    }
    #circle {
      height: 0.8cm;
      width: 0.8cm;
      position: absolute;
      top: 1.5cm;
      right: 9.5cm;
      border-radius: 50%;
      background-color: transparent;
      border: 3px solid #3dc6c1;
      }
      #circle:before {
      content: "58";
      height: 1cm;
      width: 1cm;
      top: 3cm;
      right: 5cm;
      position: absolute;
      top: 3px;
      left: 6px;
      background-color: transparent;
      color: #3dc6c1;
      font-family: 'Noto Sans', sans-serif;
      }
